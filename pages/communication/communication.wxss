/* pages/communication/communication.wxss */
page{
  background:#f0f0f0;
  font-family: "Microsoft YaHei";
  
}
.section{
  position:relative;
  margin-bottom:3px;
  padding:15px;
  font-size:11pt;
  color:#555;
  overflow: hidden;
  background:#fff;
  line-height:20px;
}
.section .name{
  float:left;
}
.section .con{
  float:left;
}
.section .con radio{
  margin:0 5px;
}
.section .unit{
  position:absolute;
  top:20px;
  right:15px;
  font-size:10pt;
}
.section input{
  float:left;
  padding:0 5px;
  height:20px;
  background:#fff;
  font-size:11pt;
  color:#000;
  font-family: "Microsoft YaHei";
}
.title{
  font-size:13pt;
}
.btn{
  margin:15px;
  background:#26ad29;
  color:#fff;
  font-size:11pt;
}
.textarea{
  margin-top:10px;
  background:#fff;
  border-radius:5px;
}
.section textarea{
  width:93%;
  font-size:11pt;
  background:#f6f6f6;
  border:#e9e9e9 solid 1px;
  padding:10px;

}

.btn-area{
  padding:15px;
  background:#fff;
}
.btn-submit{
  font-size:12pt;
  background:#03a5ef;
  color:#fff;
}