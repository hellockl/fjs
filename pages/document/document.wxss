/* pages/document/document.wxss */
page{
  background:#fff;
  font-family: "Microsoft YaHei";
}
.section{
  margin-bottom:10px;
  padding:0 15px;
}

.section input:hover{
  opacity: 0.7;
}
.search-form{
    position:relative;
}

.btn-pic{
  margin:15px;
  
  font-size:12pt;
}
.section__title,.picker{
  margin:0 0 10px;
  font-size:11pt;
  color:#5f7198;
}

.body{
    padding-left: 0rpx;
    padding-right: 0rpx;
    overflow: hidden;
}
.title{
    font-size: 52rpx;
}
.desc{
    margin-top: 10rpx;
    color: #888888;
    font-size: 28rpx;
}
.body{
  margin-top:20px;
  font-size:11pt;
}
.widgets{
  padding-top:1px;
  border-top:#e1e1e1 solid 1px;
}
.widgets__item{
    margin-top: -2px;
    margin-bottom: 0rpx;
    background-color: #FFFFFF;
    overflow: hidden;
    border-radius: 4rpx;
    cursor: pointer;
}
.widgets__info{
    display:flex;
    padding:10px 15px;
    align-items:center;
    flex-direction:row;
    border-top:#e1e1e1 solid 1px;
    border-bottom:#e1e1e1 solid 1px;
}
.widgets__info_show{
}
.widgets__info_show .widgets__info-img{
    transform: rotate(-90deg);
}
.widgets__info-name{
    flex: 1;
}
.widgets__info-img{
    width: 32rpx;
    height: 32rpx;
    transition: transform .4s;
    transform: rotate(90deg);
}

.widgets__list{
    display: none;
    padding:10px 15px;
}
.widgets__list .section{
  padding:0;
}
.widgets__list_show{
    display: block;
}
.widget{
    position: relative;
    padding-top: 26rpx;
    padding-bottom: 26rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}
.widget__arrow{
    position: absolute;
    top: 28rpx;
    right: 44rpx;
    width: 32rpx;
    height: 32rpx;
}
.widget__line{
    content: " ";
    position: absolute;
    left: 40rpx;
    top: 0;
    right: 0;
    height: 2rpx;
    background-color: #F0F0F0;
}
.widget__line_first{
    left: 0;
    right: 0;
    background-color: #D8D8D8;
}


.images-wrapper {
  
  background-color: #fff;
  margin-top: 0rpx;
}
.images-wrapper-text {
  font-size: 28rpx;
}
.images-list {
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.images-text{
  margin-bottom:5px;
  color:#666;
}
.images-image {
  width: 150rpx;
  height: 150rpx;
  margin: 0 19rpx 19rpx 0;
  border:#e1e1e1 solid 1px;
}
.image-plus {
  border: 1px solid #e1e1e1;
  position: relative;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}
.pic-box text{
  display: block;
  margin:15px;
  font-size:11pt;
}
.pic{margin:15px;}
image{
  width:100%
}
.picker-label{
  position:relative;
  background:#fff;
  border:#e1e1e1 solid 1px;
  padding:3px 18px 3px 5px;
  border-radius:5px;
}
.arrow{
  content: '';
  position: absolute;
  top:12px;
  right:5px;
  border-top:4px solid #354b6a;
  border-left:4px dashed transparent;
  border-right:4px dashed transparent;

}

.font{
  font-size:10pt;
  padding:0 15px;
}
.font text{
  display: block;
  color:#666;
}

.section-search{
    display: flex;
    padding:15px 0;
    background:#fff;
    border-bottom:#e9e9e9 solid 1px;
}
.section-search .item{
    padding:0 5px 0 15px;
    flex:4;
}
.section-search .btn-area{
    flex: 1;
    padding:0 10px 0 0;
}
.section-search input{
  margin:0;
  padding:0 15px;
  height:30px;
  font-size:11pt;
  background:#f6f6f6;
  border:#e9e9e9 solid 1px;
  color:#000;
  border-radius: 15px;
  font-family:"Microsoft YaHei";
}
.section-search .btn-submit{
   
    height:32px;
    line-height: 32px;
    width:60px;
    border-radius: 15px;
  background:#03a5ef;
  color:#fff;
  font-size:11pt;
}